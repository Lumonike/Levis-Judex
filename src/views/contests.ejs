<%- include("partials/home-button") %>

<div class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
        <h1 class="text-5xl font-bold text-white mb-2">Contests</h1>
        <p class="text-gray-400">Compete in programming contests</p>
    </div>

    <div class="grid gap-3">
        <% contests.forEach((contest, index) => { %>
            <div class="bg-gray-700 rounded-lg p-2 hover:bg-gray-600 transition-all duration-200 hover:scale-[1.02]">
                <a class="flex items-center justify-between group" href="/contests/<%= contest.id %>">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white font-bold text-lg">
                            <%= contest.id %>
                        </div>
                        <span class="text-xl text-white group-hover:text-purple-300 transition-colors duration-200">
                            <%= contest.name %>
                        </span>
                    </div>
                    <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-300 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
        <% }) %>
    </div>
</div>