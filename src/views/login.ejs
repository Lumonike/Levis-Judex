<div class="max-w-md mx-auto">
    <div class="text-center mb-8">
        <svg class="w-16 h-16 mx-auto mb-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <h1 class="text-4xl font-bold text-white">Welcome Back</h1>
        <p class="text-gray-400 mt-2">Sign in to your account</p>
    </div>

    <form id="login-form" class="space-y-6">
        <%- include("partials/input", { id: "email", label: "Email", type: "email", placeholder: "Enter your email" }) %>
        <%- include("partials/input", { id: "password", label: "Password", type: "password", placeholder: "Enter your password" }) %>
        
        <div class="text-right">
            <a class="text-blue-400 hover:text-blue-300 text-sm transition-colors duration-200" href="/forgot-password">Forgot your password?</a>
        </div>
        
        <%- include("partials/button", { id: "login-button", text: "Sign In" }) %>
    </form>
    
    <div class="text-center mt-6 pt-6 border-t border-gray-600">
        <p class="text-gray-300">Don't have an account? 
            <a class="text-blue-400 hover:text-blue-300 font-semibold transition-colors duration-200" href="/register">Create one</a>
        </p>
    </div>
</div>