<h1 class="text-4xl font-bold text-center mb-6 text-white">Login</h1>
<form id="login-form" class="space-y-4 mb-0">
    <%- include("partials/input", { id: "email", label: "Email", type: "email", placeholder: "Enter your email" }) %>
    <%- include("partials/input", { id: "password", label: "Password", type: "password", placeholder: "Enter your password" }) %>
    <a class="hover:underline text-blue-400" href="/forgot-password">Forgot password?</a>
    <%- include("partials/button", { id: "login-button", text: "Login" }) %>
</form>
<p class="text-white text-center">Don't have an account? <a class="hover:underline text-blue-400" href="/register">Register</a></p>
