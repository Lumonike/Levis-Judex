    <h1 class="text-4xl font-bold text-center mb-6 text-red-400">Invalid token!</h1>
    <p class="text-center text-2xl mb-6">Please try to register again.</p>
    <%- include("partials/back-arrow", { href: "/register", text: "Register", centered: true, noPadding: true}) %>
<% } %>