{
    "name": "levis-judex",
    "version": "0.6.0",
    "description": "Self-hosted platform running on Express.js (prettified with tailwind css) for creating contests/problems like codeforces & usaco.org that uses ioi's isolate software to sandbox submissions.",
    "main": "src/index.ts",
    "scripts": {
        "dev": "tsx --watch --env-file .env src/index.ts",
        "docs": "npx typedoc",
        "build": "tsc",
        "start": "npm run build && node --env-file .env dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "Code Joint (https://codejoint.org)",
    "license": "GPL-3.0-only",
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "body-parser": "^1.20.3",
        "child_process": "^1.0.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "disposable-email-domains": "^1.0.62",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "express-ejs-layouts": "^2.5.1",
        "express-rate-limit": "^8.0.1",
        "express-slow-down": "^3.0.0",
        "fs": "^0.0.1-security",
        "helmet": "^7.1.0",
        "jsdom": "^26.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongod": "^2.0.0",
